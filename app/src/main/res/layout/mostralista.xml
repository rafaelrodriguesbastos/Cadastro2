<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:id="@+id/LinearLayout"> 

  <TextView android:text="Cadastro de Clientes" 
  android:textSize="30sp" 
  android:gravity="center" 
  android:layout_height="wrap_content" 
  android:layout_width="fill_parent"/>
      
  <ScrollView
  android:id="@+id/scrollview"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:layout_weight="1">

    <LinearLayout
    android:id="@+id/LinearLayout2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        
      <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent" 
      android:layout_height="10px"/>
      
      <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content">
        
        <TextView
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome:"/>

        <TextView
            android:id="@+id/mostra_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
        
      </LinearLayout>
      
      <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content">
      
        <TextView
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="EndereÃ§o:"/>

        <TextView
            android:id="@+id/mostra_endereco"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
      
      </LinearLayout>
      
      <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content">
      
        <TextView
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="Telefone:"/>

        <TextView
            android:id="@+id/mostra_telefone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
      
      </LinearLayout>
      
      <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent" 
      android:layout_height="20px"/>
      
    </LinearLayout>
  </ScrollView>
  
  <LinearLayout
  android:orientation="horizontal"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content" 
  android:baselineAligned="true" 
  android:gravity="center">
    
    <Button
    android:layout_width="100px" 
    android:layout_height="50px" 
    android:id="@+id/mostra_btnAnterior"
    android:text="&lt;- Anterior"/>
    
    <Button
    android:layout_width="100px" 
    android:layout_height="50px" 
    android:id="@+id/mostra_btnProximo"
    android:text="Proximo -&gt;"/>
    
  </LinearLayout>
  
  <LinearLayout
  android:orientation="horizontal"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content" 
  android:baselineAligned="true" 
  android:gravity="center">
    
    <Button
    android:layout_height="50px" 
    android:id="@+id/mostra_btnVoltar"
    android:gravity="center" 
    android:layout_width="120px" 
    android:text="Voltar"/>
    
  </LinearLayout>
</LinearLayout> 
